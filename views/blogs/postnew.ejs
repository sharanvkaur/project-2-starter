<div class="container">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="new-blog panel panel-default">

      <div class="panel-heading clearfix">
        <h3 class="panel-title">What's your new post about?</h3>
      </div>

      <div class="panel-body">
        <form class="new-blog form-horizontal" method="POST" action="/blogs/<%= blogId %>">

            <div class="form-group">
              <label class="col-md-2 col-form-label control-label">Title</label>
              <div class="col-md-10">
                <input class="form-control" type="text" name="title" placeholder="Title">
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-2 col-form-label control-label">Content</label>
              <div class="col-md-10">
                <textarea rows="16" class="form-control" type="text" name="content"></textarea>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-2 col-form-label control-label">Featured Image</label>
              <div class="col-md-10">
                <input class="form-control" type="text" name="image" value="http://placehold.it/400x300">
                <small class="text-muted">
                  Link to an image - max width 400px
                </small>
              </div>
            </div>

            <button class="col-md-12 btn btn-info" type="submit">
              Post new entry!
            </button>
          </form>
        </div>
    </div>
  </div>
</div>
