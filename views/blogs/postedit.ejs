
<div class="container">
  <div class="col-md-12 col-sm-6 col-xs-12">
    <div class="new-blog panel panel-default">

      <div class="panel-heading clearfix">
        <h3 class="panel-title">Making changes to post...</h3>
      </div>

      <div class="panel-body">

        <form class="new-blog form-horizontal" method="POST" action="/posts/<%= post._id %>?_method=PUT">

          <div class="form-group">
            <label class="col-md-2 col-form-label control-label">Title</label>
            <div class="col-md-10">
              <input class="form-control" type="text" name="title" value="<%= post.title %>">
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-2 col-form-label control-label">Content</label>
            <div class="col-md-10">
              <textarea rows="20" class="form-control" type="text" name="content"><%= post.content %>
              </textarea>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-2 col-form-label control-label">Featured Image</label>
            <div class="col-md-10">
              <input class="form-control" type="text" name="image" value="<%= post.image %>">
              <small class="text-muted">
                Link to an image - max width 400px
              </small>
            </div>
          </div>

          <button class="col-md-12 btn btn-info" type="submit">
            Update post!
          </button>

        </form>
      </div>
    </div>
  </div>
</div>
